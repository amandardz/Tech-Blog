<div class="card text-center">
  <div class="card-header text-center">
    <h2>{{title}}</h2>
    <h6>Created by {{user.username}} on {{format_date date_created}}</h6>
  </div>
  <div>
    <p>{{content}}</p>
  </div>
</div>

<div class="form-box">
  <form class="form new-post-form">
    <div class="form-group">
      <textarea class="form-input" id=" " name="" placeholder="Post a comment"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Post</button>
    </div>
  </form>
</div>
